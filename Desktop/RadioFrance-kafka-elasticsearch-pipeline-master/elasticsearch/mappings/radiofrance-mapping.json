{
  "settings": {
    "analysis": {
      "filter": {
        "french_elision": { "type": "elision", "articles_case": true, "articles": ["l", "m", "t", "qu", "n", "s", "j", "d", "c", "jusqu", "quoiqu", "lorsqu", "puisqu"] },
        "french_stop": { "type": "stop", "stopwords": "_french_" },
        "french_stemmer": { "type": "stemmer", "language": "light_french" }
      },
      "analyzer": {
        "rf_french_analyzer": {
          "tokenizer": "standard",
          "filter": [ "french_elision", "lowercase", "french_stop", "french_stemmer" ]
        },
        "ngram_analyzer": {
          "tokenizer": "ngram_tokenizer",
          "filter": [ "lowercase" ]
        }
      },
      "tokenizer": {
        "ngram_tokenizer": { "type": "ngram", "min_gram": 3, "max_gram": 4, "token_chars": [ "letter", "digit" ] }
      }
    }
  },
  "mappings": {
    "properties": {
      "episode_title": { 
        "type": "text", "analyzer": "rf_french_analyzer",
        "fields": { "ngram": { "type": "text", "analyzer": "ngram_analyzer" } } 
      },
      "show_title": { "type": "text", "analyzer": "rf_french_analyzer" },
      "description": { "type": "text", "analyzer": "rf_french_analyzer" },
      "location": { "type": "geo_point" },
      "station_id": { "type": "keyword" },
      "station_brand": { "type": "keyword" },
      "theme_categories": { "type": "keyword" },
      "broadcast_start_time": { "type": "date" },
      "@timestamp": { "type": "date" }
    }
  }
}